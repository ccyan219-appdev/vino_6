<div class="page-header">
  <h3>Rating #<%= @rating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Wine</dt>
      <dd>
        <% if @rating.wine.present? %>
          <a href="/wines/<%= @rating.wine_id %>">
            <%= @rating.wine.image_url %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @rating.user.present? %>
          <a href="/users/<%= @rating.user_id %>">
            <%= @rating.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Rating</dt>
      <dd><%= @rating.rating %></dd>

      <dt>Comments</dt>
      <dd><%= @rating.comments %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ratings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @rating.user %>
        <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_rating/<%= @rating.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
